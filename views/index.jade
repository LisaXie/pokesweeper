extends layout

block head
  script.
    cells = !{JSON.stringify(cells)};
    currentId = '#{id}';
  script(src='javascripts/Timer.js')
  script(src='javascripts/Cell.js')
  script(src='javascripts/ColorCell.js')
  script(src='javascripts/Minefield.js')
  script(src='javascripts/Minesweeper.js')
  script(src='javascripts/ImageMinesweeper.js')
  script(src='javascripts/PokeUtil.js')
  script(src='javascripts/Pokesweeper.js')
  script(src='javascripts/names.js')
  script(src='javascripts/index.js')

block content
  h1#pageTitle
    a(name='Pokesweeper' href='/') Pokesweeper
  #selectionContainer
    select#dropdown.selectionClickable(onchange='selectPokemon()')
    button#random.selectionClickable(onclick='chooseRandom()') Random Pokémon
    button#randomUnsolved.selectionClickable(onclick='chooseRandomUnsolved()') Random unsolved Pokémon
  #counters
    #bombContainer.counterContainer
      #bombCounter.counter
      #bombLabel BOMBS
    #timeContainer.counterContainer
      #timeCounter.counter 0
      #timeLabel TIME
    #highScoreContainer.counterContainer
      #highScoreCounter.counter
      #highScoreLabel BEST
    #pokedexContainer.counterContainer
      #pokedexCounter.counter
      #pokedexLabel POKÉDEX
  #resetButton
  
  #field
  
  #footer
    | View on 
    a(href='https://github.com/takumif/pokesweeper' name='GitHub' target='blank') GitHub
    | . Created by 
    a(href='http://www.takumifujimoto.com' name='Takumi Fujimoto' target='blank') Takumi Fujimoto
  
  #cache