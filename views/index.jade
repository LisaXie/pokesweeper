extends layout

block head
  script.
    cells = !{JSON.stringify(cells)};
    currentId = '#{id}';
  script(src='javascripts/Timer.js')
  script(src='javascripts/Cell.js')
  script(src='javascripts/ColorCell.js')
  script(src='javascripts/Minefield.js')
  script(src='javascripts/Minesweeper.js')
  script(src='javascripts/ImageMinesweeper.js')
  script(src='javascripts/PokeUtil.js')
  script(src='javascripts/Pokesweeper.js')
  script(src='javascripts/names.js')
  script(src='javascripts/index.js')
  
  script(src='http://w.sharethis.com/button/buttons.js')
  script.
    stLight.options({
      publisher: "7ae6aa00-a7db-4ac0-aa1c-521c34fb02c5", shorten: false,
      doNotHash: true, doNotCopy: true, hashAddressBar: false});

block content
  h1
    a(name='Pokesweeper' href='/') Pokesweeper
  #selectionContainer
    select#dropdown(onchange='selectPokemon()')
    button#random(onclick='chooseRandom()') Random Pokémon
    button#randomUnsolved(onclick='chooseRandomUnsolved()') Random unsolved Pokémon
  #resetButton
  #counters
    #bombContainer.counterContainer
      #bombCounter
      #bombLabel BOMBS
    #timeContainer.counterContainer
      #timeCounter 0
      #timeLabel TIME
    #highScoreContainer.counterContainer
      #highScoreCounter
      #highScoreLabel BEST
    #pokedexContainer.counterContainer
      #pokedexCounter
      #pokedexLabel POKÉDEX
  #field
  
  #shareThis
    span.st_facebook_hcount(displayText='Facebook' st_url='http://pokesweeper.takumifujimoto.com' st_title='Pokesweeper')
    span.st_twitter_hcount(displayText='Tweet' st_url='http://pokesweeper.takumifujimoto.com' st_title='Pokesweeper')
    span.st_tumblr_hcount(displayText='Tumblr' st_url='http://pokesweeper.takumifujimoto.com' st_title='Pokesweeper')
    span.st_googleplus_hcount(displayText='Google +' st_url='http://pokesweeper.takumifujimoto.com' st_title='Pokesweeper')
    span.st_reddit_hcount(displayText='Reddit' st_url='http://pokesweeper.takumifujimoto.com' st_title='Pokesweeper')
    